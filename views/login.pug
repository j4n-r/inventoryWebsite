extends layout 

block content 
  link(rel='stylesheet', href='/stylesheets/signUp.css')
  form(action='/user/login', method='POST')
    .form-group
      label(for='username') Username
      input#exampleInputEmail1.form-control(type='text' name='username' aria-describedby='emailHelp' placeholder='Enter Username')
    .form-group
      label(for='password') Password
      input#exampleInputPassword1.form-control(type='password' name='password' placeholder='Password')
    .form-group.form-check
    button.btn.btn-primary(type='submit') Submit
    a(href="../drinks")
      button.btn(type='button') Cancel

      